<Window x:Class="CentroDeportivo.WindowReservas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CentroDeportivo"
        mc:Ignorable="d"
        Title="WindowReservas" Height="450" Width="660">
    <Grid Background="#FF64CDFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="382*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="141"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dgReservas" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="28,123,8,36" Background="White" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="cmbSocios" HorizontalAlignment="Left" Margin="28,72,0,0" VerticalAlignment="Top" Width="120" Height="22" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="cmbReservas" HorizontalAlignment="Left" Margin="101,72,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.425,0.503" Height="22" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="28,24,0,0" TextWrapping="Wrap" Text="Socios" VerticalAlignment="Top" Height="31" Width="52" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="101,24,0,0" TextWrapping="Wrap" Text="Actividades" VerticalAlignment="Top" Height="38" Width="120" FontSize="18" Grid.Column="1"/>
        <DatePicker HorizontalAlignment="Left" Margin="238,70,0,0" VerticalAlignment="Top" Width="136" Height="24" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="238,34,0,0" TextWrapping="Wrap" Text="Fecha" VerticalAlignment="Top" Height="28" Width="68" FontSize="18" Grid.Column="1"/>
        <Button x:Name="btnAnyadir" Content="Añadir" HorizontalAlignment="Left" Margin="0,123,0,0" VerticalAlignment="Top" Height="57" Width="173" Background="#FFE5E9FF" FontSize="22" Grid.ColumnSpan="2" Grid.Column="3"/>
        <Button Content="Modificar" HorizontalAlignment="Left" Margin="0,232,0,0" VerticalAlignment="Top" Height="57" Width="173" Background="#FFE5E9FF" FontSize="22" Grid.ColumnSpan="2" Grid.Column="3"/>
        <Button x:Name="BtnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="0,341,0,0" VerticalAlignment="Top" Height="57" Width="173" Background="#FFE5E9FF" FontSize="22" Grid.ColumnSpan="2" Grid.Column="3"/>

    </Grid>
</Window>
