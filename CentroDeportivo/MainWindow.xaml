<Window x:Class="CentroDeportivo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CentroDeportivo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="White">
        <Button Click="BtnSocios_Click" Content="Gestion de socios" HorizontalAlignment="Left" Margin="233,118,0,0" VerticalAlignment="Top" Height="75" Width="282" FontWeight="Bold" FontSize="22" Background="#FFE5E9FF"/>
        <Button Click="BtnReservas_Click" Content="Gestion de reservas" HorizontalAlignment="Left" Margin="233,215,0,0" VerticalAlignment="Top" Height="75" Width="282" FontWeight="Bold" FontSize="22" Background="#FFE5E9FF"/>
        <Button Click="BtnActividades_Click" Content="Gestion de actividades" HorizontalAlignment="Left" Margin="233,312,0,0" VerticalAlignment="Top" Height="75" Width="282" FontWeight="Bold" FontSize="22" Background="#FFE5E9FF"/>
        <Label Content="Gestion de Poli deportivo " HorizontalAlignment="Left" Margin="222,33,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="24" Background="{x:Null}"/>

    </Grid>
</Window>
