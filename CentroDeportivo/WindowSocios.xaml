<Window x:Class="CentroDeportivo.WindowSocios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CentroDeportivo"
        mc:Ignorable="d"
        Title="WindowSocios" Height="450" Width="667">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="214*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgSocios" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="28,117,216,36" Background="White" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="28,18,0,0" TextWrapping="Wrap" Text="Nombre" VerticalAlignment="Top" Height="31" Width="76" FontSize="18" Grid.Row="1"/>
        <Button x:Name="btnAnyadir"
                Content="Añadir" 
                HorizontalAlignment="Left" 
                Margin="468,117,0,0" 
                VerticalAlignment="Top" 
                Height="57" Width="173" 
                Background="#FFE5E9FF" 
                FontSize="22" 
                Grid.Row="1"/>
        <Button Content="Modificar" HorizontalAlignment="Left" Margin="468,226,0,0" VerticalAlignment="Top" Height="57" Width="173" Background="#FFE5E9FF" FontSize="22" Grid.Row="1"/>
        <Button x:Name="BtnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="468,335,0,0" VerticalAlignment="Top" Height="57" Width="173" Background="#FFE5E9FF" FontSize="22" Grid.Row="1"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Margin="30,54,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" Height="30" Background="#FFEDEDED" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="191,19,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Height="31" Width="76" FontSize="18" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="373,21,0,0" TextWrapping="Wrap" Text="Activo" VerticalAlignment="Top" Height="31" Width="76" FontSize="18" Grid.Row="1"/>
        <RadioButton x:Name="rdbSi" Content="Si" HorizontalAlignment="Left" Margin="374,57,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="15"/>
        <RadioButton x:Name="rdbNo" Content="No" HorizontalAlignment="Left" Margin="375,87,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNombreEmail" HorizontalAlignment="Left" Margin="194,53,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="132" Height="30" Background="#FFEDEDED" FontSize="18"/>

    </Grid>
</Window>
