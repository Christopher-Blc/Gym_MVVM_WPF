<Window x:Class="CentroDeportivo.WindowSocios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CentroDeportivo"
        mc:Ignorable="d"
        Title="WindowSocios" Height="450" Width="800">
    <Grid Margin="0,0,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="571*"/>
            <ColumnDefinition Width="96*"/>
        </Grid.ColumnDefinitions>


        <DataGrid 
            ItemsSource="{Binding ListaSocios}"
            SelectedValue="{Binding SocioSeleccionado, Mode=TwoWay}"
            SelectedValuePath="Id"
            x:Name="dgSocios"
            Margin="28,117,102,36"
            Background="White"
            AutoGenerateColumns="False"
            ColumnWidth="*"
            CanUserAddRows="False"
            IsReadOnly="True"
            AlternationCount="2"
            RowBackground="White"
            AlternatingRowBackground="#FFF3F3F3">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre"
                            Binding="{Binding Nombre}" />

                <DataGridTextColumn Header="Email"
                            Binding="{Binding Email}" />

                <DataGridCheckBoxColumn Header="Activo"
                                Binding="{Binding IsActive}" />
            </DataGrid.Columns>
        </DataGrid>


        <TextBlock HorizontalAlignment="Left" Margin="28,18,0,0" TextWrapping="Wrap" Text="Nombre" VerticalAlignment="Top" Height="31" Width="76" FontSize="18"/>
        <Button x:Name="btnAnyadir"
                Command="{Binding CrearSocioCommand}"
                Content="Añadir" 
                HorizontalAlignment="Left" 
                Margin="602,115,0,0" 
                VerticalAlignment="Top" 
                Height="57" Width="173" 
                Background="#FFE5E9FF" 
                FontSize="22" Grid.ColumnSpan="2"/>

        <Button 
            Content="Modificar"
            Command="{Binding EditarSocioCommand}"
            HorizontalAlignment="Left" 
            Margin="602,224,0,0" 
            VerticalAlignment="Top" 
            Height="57" Width="173" 
            Background="#FFE5E9FF" 
            FontSize="22" Grid.ColumnSpan="2"/>

        <Button x:Name="BtnEliminar"
                Command="{Binding EliminarSocioCommand}"
                Content="Eliminar" 
                HorizontalAlignment="Left" 
                Margin="602,333,0,0" 
                VerticalAlignment="Top" 
                Height="57" Width="173" 
                Background="#FFE5E9FF" 
                FontSize="22" Grid.ColumnSpan="2"/>
        <TextBox 
            x:Name="txtNombre" 
            Text="{Binding Nombre, Mode=TwoWay , UpdateSourceTrigger=PropertyChanged}"
            HorizontalAlignment="Left" 
            Margin="30,54,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="194" 
            Height="24" 
            Background="#FFEDEDED" FontSize="13" FontWeight="Bold"/>

        <TextBox 
            x:Name="txtEmail"
            Text="{Binding Email, Mode=TwoWay , UpdateSourceTrigger=PropertyChanged}"
            HorizontalAlignment="Left" 
            Margin="260,56,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="198" 
            Height="22" 
            Background="#FFEDEDED" 
            FontSize="13" FontWeight="Bold"/>


        <TextBlock HorizontalAlignment="Left" Margin="257,22,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Height="31" Width="76" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="481,22,0,0" TextWrapping="Wrap" Text="Activo" VerticalAlignment="Top" Height="31" Width="76" FontSize="18"/>
        <RadioButton 
            x:Name="rdbSi"
            GroupName="EstadoSocio"
            IsChecked="{Binding IsActive, Mode=TwoWay ,  UpdateSourceTrigger=PropertyChanged}"
            Content="Si" 
            HorizontalAlignment="Left" 
            Margin="482,58,0,0" 
            VerticalAlignment="Top" 
            FontSize="15"/>

        <RadioButton 
            x:Name="rdbNo" 
            GroupName="EstadoSocio"
            Content="No" 
            HorizontalAlignment="Left" 
            Margin="483,88,0,0" 
            VerticalAlignment="Top"/>

    </Grid>
</Window>
